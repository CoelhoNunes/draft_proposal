# =============================================================================
# MicroTech Platform Environment Configuration
# =============================================================================
# Copy this file to .env and update the values for your environment

# =============================================================================
# Server Configuration
# =============================================================================
NODE_ENV=development
HOST=localhost
PORT=3000
SCHEME=http

# =============================================================================
# Database Configuration
# =============================================================================
# Azure Cosmos DB Connection String
DATABASE_URL=your-cosmos-db-connection-string

# =============================================================================
# Authentication & Security
# =============================================================================
# JWT Secret (generate a strong secret key)
JWT_SECRET=your-super-secret-jwt-key-change-in-production-minimum-32-characters
JWT_EXPIRES_IN=7d

# =============================================================================
# AI/LLM Configuration
# =============================================================================
# AI Provider (openai, azure-openai, anthropic)
AI_PROVIDER=openai

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here
AI_BASE_URL=https://api.openai.com/v1
AI_MODEL=gpt-4
AI_TEMPERATURE=0.3
AI_MAX_TOKENS=1200
LLM_MODEL=gpt-4.1-mini
LLM_TEMP=0.3
LLM_MAX_TOKENS=4096
LLM_TOP_P=0.9

# Azure OpenAI Configuration (if using Azure OpenAI)
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_KEY=your-azure-openai-api-key
AZURE_OPENAI_DEPLOYMENT_NAME=your-deployment-name

# =============================================================================
# Azure Services Configuration
# =============================================================================
# Azure Storage Account
AZURE_STORAGE_ACCOUNT_NAME=your-storage-account-name
AZURE_STORAGE_ACCOUNT_KEY=your-storage-account-key
AZURE_STORAGE_CONTAINER_NAME=microtech-documents

# Azure Key Vault
AZURE_KEY_VAULT_URL=https://your-keyvault.vault.azure.net/

# Azure Application Insights
AZURE_APPLICATION_INSIGHTS_CONNECTION_STRING=your-app-insights-connection-string

# =============================================================================
# CORS Configuration
# =============================================================================
# Allowed origins for CORS (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,https://your-domain.com

# =============================================================================
# File Upload Configuration
# =============================================================================
# Maximum file size in bytes (50MB)
MAX_FILE_SIZE=52428800
# Maximum number of files per request
MAX_FILES=10
# Allowed MIME types (comma-separated)
ALLOWED_MIME_TYPES=application/pdf,application/vnd.openxmlformats-officedocument.wordprocessingml.document,text/plain
MAX_UPLOAD_MB=512

# =============================================================================
# Logging Configuration
# =============================================================================
LOG_LEVEL=info
LOG_PRETTY=true

# =============================================================================
# Email Configuration (Optional)
# =============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# =============================================================================
# Microsoft Teams Integration (Optional)
# =============================================================================
TEAMS_WEBHOOK_URL=https://your-org.webhook.office.com/webhookb2/your-webhook-url

# =============================================================================
# Development/Testing Flags
# =============================================================================
# Skip authentication for development
SKIP_AUTH=false
# Mock AI responses for testing
MOCK_AI_RESPONSES=false
# Enable debug mode
DEBUG=false

# =============================================================================
# Retrieval-Augmented Generation (RAG)
# =============================================================================
RAG_EMBED_MODEL=text-embedding-3-large
RAG_TOP_K=24
RAG_RERANK_TOP_K=8
RAG_CHUNK_SIZE=1000
RAG_CHUNK_OVERLAP=100

# =============================================================================
# Feature Flags
# =============================================================================
FEATURE_FF_STRONG_RAG=true
FEATURE_FF_ARCHIVE_V2=true
FEATURE_FF_CHATGPT_STYLE=true
FF_CHAT_ADD_TO_DRAFT_GATED=true
FF_CHAT_RESIZE_TOGGLE=true
FF_ARCHIVE_UNIQUE_NAMES=true
