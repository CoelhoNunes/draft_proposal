{
  "extends": "../../../config/tsconfig/base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": ".",
    "declaration": true,
    "declarationMap": true,
    "noEmit": false,
    "baseUrl": ".",
